<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>THERMOS TMSQPE - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.oz.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TMSQPWeb.styles.css" asp-append-version="true" />
    <link href="~/css/pages/_layout.css" rel="stylesheet" />

    <link href="~/assets/DataTables/datatables.min.css" rel="stylesheet" />
    <link href="~/assets/fontawesome-free-6.5.2-web/css/all.min.css" rel="stylesheet" />

</head>
<body>
    <div class="pgloadarea"><div class="pgloadingprog"></div></div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <div class="text-center navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a id="hypPayslip" class="nav-link text-dark h5 hover-image" asp-area="" asp-page="/Payslips/List">
                                <img src="~/icon/payslip24_gray.png" class="imgIcon" />
                                Payslip
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="hypEmployee" class="nav-link text-dark h5" asp-area="" asp-page="/Employees/List">
                                <img src="~/icon/employee24_blank.png" class="imgIcon" />
                                Employee
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark h5" asp-area="" asp-page="/Notification/List">Notification</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark h5" asp-area="" asp-page="/System/Setting">Setting</a>
                        </li>
                    </ul>
                    @*<partial name="_LoginPartial" />*@
                </div>
                <div class="text-end" style="padding-right:1em">
                    <img src="~/images/logo_90.png" />
                </div>

                @*&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="navbar-brand" asp-area="" asp-page="/Index">

                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>*@

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- footer start-->
    <footer class="footer d-print-none">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 footer-copyright">
                    <p class="mb-0">
                        @*copyright &copy; 2023  All rights reserved.*@
                    </p>
                </div>
                <div class="col-md-6">
                    <p class="pull-right mb-0">
                        ver：
                        <a asp-page="/Systems/SystemUpgradeHistory">
                            v0.0.1
                        </a>
                        <small>

                            <b>
                                @DateTime.Now.ToString(BusinessSystem.ShortDateTimeStringFormat)
                            </b>
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer end-->


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/assets/DataTables/datatables.min.js"></script>
    <script src="~/js/datatables.setting.js"></script>
    <script src="~/js/jquery.ui.setting.js"></script>
    <script src="~/js/swal.js"></script>


    <link href="~/lib/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/themes/base/theme.min.css" rel="stylesheet" />
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>


    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>

    <script src="~/assets/fontawesome-free-6.5.2-web/js/all.min.js"></script>
    <link href="~/assets/kendo/styles/kendo.rtl.min.css" rel="stylesheet" />
    <link href="~/assets/kendo/styles/kendo.default.min.css" rel="stylesheet" />
    <link href="~/assets/kendo/styles/kendo.default.mobile.min.css" rel="stylesheet" />
    <link href="~/assets/kendo/styles/kendo.common.min.css" rel="stylesheet" />

    <script src="~/assets/kendo/js/kendo.all.min.js"></script>


    <script>
        function jsPageLoading_Show() {
            $('.pgloadarea').show();
        };
        function jsPageLoading_FadeOut(value) {
            $('.pgloadarea').show();
            $('.pgloadarea').fadeOut(value);
        };
        function jsPageLoading_Close() {
            $('.pgloadarea').fadeOut(500);
        };
        window.onload = (event) => {
            $('.pgloadarea').fadeOut(500);
        };
        $(window).blur(function () {
            $('.pgloadarea').fadeOut(500);
        });
    </script>
    <script src="~/js/pages/_layout.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>